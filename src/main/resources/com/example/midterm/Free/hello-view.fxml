<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane fx:id="pnLogin" stylesheets="@hello.css" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.midterm.Free.HelloController">
    <children>
        <VBox alignment="CENTER" prefHeight="384.0" prefWidth="433.0" spacing="20.0">
            <padding>
                <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
            </padding>
            <children>
                <GridPane prefHeight="277.0" prefWidth="390.0">
                    <columnConstraints>
                        <ColumnConstraints hgrow="SOMETIMES" maxWidth="155.0" minWidth="10.0" prefWidth="69.0" />
                        <ColumnConstraints hgrow="SOMETIMES" maxWidth="250.0" minWidth="10.0" prefWidth="207.0" />
                        <ColumnConstraints hgrow="SOMETIMES" maxWidth="182.0" minWidth="10.0" prefWidth="117.0" />
                    </columnConstraints>
                    <rowConstraints>
                  <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                  <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                  <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                    </rowConstraints>
                    <children>
                        <Label alignment="CENTER" prefHeight="49.0" prefWidth="119.0" text="Login" GridPane.columnIndex="1">
                            <font>
                                <Font name="Arial Bold" size="22.0" />
                            </font></Label>
                        <Label fx:id="userName" prefHeight="27.0" prefWidth="96.0" text="Username:" GridPane.rowIndex="2" />
                        <Label fx:id="Password" text="Password:" GridPane.rowIndex="3" />
                        <TextField fx:id="UsernameField" prefHeight="25.0" prefWidth="145.0" GridPane.columnIndex="1" GridPane.rowIndex="2" />
                  <PasswordField fx:id="PasswordField" GridPane.columnIndex="1" GridPane.rowIndex="3" />
                        <Button fx:id="Loginbtn" contentDisplay="CENTER" mnemonicParsing="false" onMouseClicked="#onHelloButtonClick" prefHeight="25.0" prefWidth="73.0" text="Login" GridPane.columnIndex="1" GridPane.rowIndex="4" />
                  <Label text="No account? Create one" GridPane.columnIndex="1" GridPane.rowIndex="5" />
                  <Button fx:id="registerButton" mnemonicParsing="false" onMouseClicked="#onRegisterButtonClick" prefHeight="25.0" prefWidth="73.0" text="Register" GridPane.columnIndex="1" GridPane.rowIndex="6" />
                    </children>
                </GridPane>
            </children>
        </VBox>
    </children>
</AnchorPane>
